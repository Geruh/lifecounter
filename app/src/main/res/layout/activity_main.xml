<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical" android:gravity="center">

    <TextView
            android:text="@string/playerOneLife"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/player1" android:textStyle="bold" android:textSize="18sp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="374dp"
            android:layout_height="wrap_content"
            android:id="@+id/playerOneBtns">
        <Button
                android:text="-1"
                android:layout_width="84dp"
                android:layout_height="37dp"
                android:id="@+id/p1MinusOne"/>
        <Button
                android:text="+1"
                android:layout_width="84dp"
                android:layout_height="37dp"
                android:id="@+id/p1PlusOne"/>
        <Button
                android:text="-5"
                android:layout_width="84dp"
                android:layout_height="37dp"
                android:id="@+id/p1MinusFive"/>
        <Button
                android:text="+5"
                android:layout_width="84dp"
                android:layout_height="37dp"
                android:id="@+id/p1PlusFive"/>
    </LinearLayout>

    <TextView
            android:text="@string/playerTwoLife"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/player2" android:textSize="18sp" android:textStyle="bold"/>
    <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:id="@+id/playerTwoBtns">
        <Button
                android:text="-1"
                android:layout_width="84dp"
                android:layout_height="37dp"
                android:id="@+id/p2MinusOne"/>
        <Button
                android:text="+1"
                android:layout_width="84dp"
                android:layout_height="37dp"
                android:id="@+id/p2PlusOne"/>
        <Button
                android:text="-5"
                android:layout_width="84dp"
                android:layout_height="37dp"
                android:id="@+id/p2MinusFive"/>
        <Button
                android:text="+5"
                android:layout_width="84dp"
                android:layout_height="37dp"
                android:id="@+id/p2PlusFive"/>
    </LinearLayout>

    <TextView
            android:text="@string/playerThreeLife"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/player3" android:textSize="18sp" android:textStyle="bold"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="379dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/playerThreeBtns">
        <Button
                android:text="-1"
                android:layout_width="84dp"
                android:layout_height="37dp"
                android:id="@+id/p3MinusOne"/>
        <Button
                android:text="+1"
                android:layout_width="84dp"
                android:layout_height="37dp"
                android:id="@+id/p3PlusOne"/>
        <Button
                android:text="-5"
                android:layout_width="84dp"
                android:layout_height="37dp"
                android:id="@+id/p3MinusFive"/>
        <Button
                android:text="+5"
                android:layout_width="84dp"
                android:layout_height="37dp"
                android:id="@+id/p3PlusFive"/>
    </LinearLayout>
    <TextView
            android:text="@string/playerFourLife"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/player4" android:textSize="18sp" android:textStyle="bold"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="374dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/playerFourBtns">
        <Button
                android:text="-1"
                android:layout_width="84dp"
                android:layout_height="37dp"
                android:id="@+id/p4MinusOne"/>
        <Button
                android:text="+1"
                android:layout_width="84dp"
                android:layout_height="37dp"
                android:id="@+id/p4PlusOne"/>
        <Button
                android:text="-5"
                android:layout_width="84dp"
                android:layout_height="37dp"
                android:id="@+id/p4MinusFive"/>
        <Button
                android:text="+5"
                android:layout_width="84dp"
                android:layout_height="37dp"
                android:id="@+id/p4PlusFive"/>
    </LinearLayout>
    <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_height="64dp" android:id="@+id/results" android:textSize="24sp"/>
</LinearLayout>
